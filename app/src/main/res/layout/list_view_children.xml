<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_children"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/imageView_avatar"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/avatar" />
        
        <TextView
            android:id="@+id/TextView_childrenName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textStyle="bold"
            android:text="Pedrito Fuenzalida"
            android:padding="5dp"
            android:layout_alignTop="@+id/imageView_avatar"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/imageView_avatar"
            android:layout_toEndOf="@+id/imageView_avatar"/>

        <TextView
            android:id="@+id/TextView_rut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView_childrenName"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/imageView_avatar"
            android:layout_toRightOf="@+id/imageView_avatar"
            android:padding="5dp"
            android:text="12.123.123-1"
            android:textAlignment="textEnd" />


    </RelativeLayout>

</android.support.v7.widget.CardView>