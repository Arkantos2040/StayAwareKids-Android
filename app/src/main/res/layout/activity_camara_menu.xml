<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    android:padding="5dp"
    tools:context="cl.m4uro.stayawarekids.CamaraMenuActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout6"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="36dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/imageButton_back"
            android:text="Videovigilancia"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="330dp"
        android:layout_height="412dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/radius_yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_camara1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/boton_amarillo"
            android:drawableLeft="@drawable/ic_videocam"
            android:paddingLeft="40dp"
            android:drawablePadding="60dp"
            android:textAlignment="textStart"
            android:text="CAMARA 1" />

        <Button
            android:id="@+id/button_camara2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/boton_amarillo"
            android:drawableLeft="@drawable/ic_videocam"
            android:paddingLeft="40dp"
            android:drawablePadding="60dp"
            android:textAlignment="textStart"
            android:text="CAMARA 2" />

        <Button
            android:id="@+id/button_camara3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/boton_amarillo"
            android:drawableLeft="@drawable/ic_videocam"
            android:paddingLeft="40dp"
            android:drawablePadding="60dp"
            android:textAlignment="textStart"
            android:text="CAMARA 3" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
